{
  "scripts": {
    "build": "electron-builder",
    "dist": "electron-builder --dir"
  },
  "build": {
    "appId": "com.example.pdfconverterapp",
    "productName": "PDF Converter App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "renderer.js",
      "node_modules"
    ],
    "extraResources": [
      "assets"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
